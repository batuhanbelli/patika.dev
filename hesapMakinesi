package kosul;
import java.util.Scanner;
public class hesapMakinesi {
    public static void main(String[] args) {
        int n1,n2,select;
        Scanner input =new Scanner(System.in);

        System.out.print("Birinci Sayıyı Giriniz : ");
        n1 = input.nextInt();

        System.out.print("İkinci Sayıyı Giriniz : ");
        n2 = input.nextInt();

        System.out.println("1-Toplama\n2-Çıkarma\n3-Çarpma\n4-Bölme");
        System.out.print("Seçiminiz : ");
        select = input.nextInt();

        switch (select){
            case 1 :
                System.out.print("Toplama İşleminin Sonucu : " + (n1+n2));
                break;
            case 2 :
                System.out.print("Çıkarma İşleminin Sonucu : " + (n1-n2));
                break;
            case 3 :
                System.out.print("Çarpma İşleminin Sonucu : " + (n1*n2));
                break;
            case 4 :
                if (n2 != 0 ){
                    System.out.print("Bölme İşleminin Sonucu : " + (n1/n2));
                }else {
                    System.out.print("Bir Sayı Sıfıra Bölünemez");
                }
                break;

            default:
                System.out.print("Yanlış Seçim Yaptınız. Tekrar Deneyiniz ");
        }


    }
}
