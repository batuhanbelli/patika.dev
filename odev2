package Pratik;
import java.util.Scanner;
public class odev2 {
    public static void main(String[] args) {
        double elma = 3.67, armut = 2.14, domates = 1.11, muz = 0.95, patlıcan  = 5.00;
        int kilo1, kilo2, kilo3, kilo4, kilo5;
        double elmaSon, armutSon, domatesSon, muzSon, patlıcanSon;
        Scanner input = new Scanner(System.in);

        System.out.print("Elma Kaç Kilo ? : ");
        kilo1 = input.nextInt();
        elmaSon = kilo1*elma;

        System.out.print("Armut Kaç Kilo ? : ");
        kilo2 = input.nextInt();
        armutSon = kilo2*armut;

        System.out.print("Domates Kaç Kilo ? : ");
        kilo3 = input.nextInt();
        domatesSon = kilo3*domates;

        System.out.print("Muz Kaç Kilo ? : ");
        kilo4 = input.nextInt();
        muzSon = kilo4*muz;

        System.out.print("Patlıcan Kaç Kilo ? : ");
        kilo5 = input.nextInt();
        patlıcanSon = kilo5*patlıcan;

        double toplamtutar = elmaSon + armutSon + domatesSon +muzSon +patlıcanSon;

        System.out.print("Toplam Tutar : " + toplamtutar);
    }
}
